<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bang.project.bang.ResourcesActivity">

        <TextView
            android:id="@+id/tv_resources_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="140dp"
            android:text="@string/bt_main_resources"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal"
            android:layout_below="@+id/tv_resources_title"
            android:layout_alignParentStart="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_search"
                android:background="#ffffff"
                android:layout_alignTop="@+id/ll_search"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/ll_search" />
            <EditText
                android:id="@+id/ed_resources_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:hint="@string/hint_resources_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ll_searchh"
            android:layout_below="@+id/ll_search"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="分类1"
                android:background="#acc8ae"
                android:drawableTop="@android:drawable/ic_menu_compass"  />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="分类2"
                android:background="#acc8ae"
                android:drawableTop="@android:drawable/ic_menu_compass"  />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="分类3"
                android:background="#acc8ae"
                android:drawableTop="@android:drawable/ic_menu_compass"   />
        </LinearLayout>

        <include layout="@layout/share_bottom_button" />


    </RelativeLayout>
